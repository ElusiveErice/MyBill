<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditText1">

        <item name="android:background">@drawable/border5</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="TextView1">

        <item name="android:background">@drawable/border</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button1" parent="Widget.AppCompat.Button">

        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/border5</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/background3</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditText2">

        <item name="android:background">@drawable/border3</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="TextView2">


        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button2" parent="Widget.AppCompat.Button">

        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/border3</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/background3</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
