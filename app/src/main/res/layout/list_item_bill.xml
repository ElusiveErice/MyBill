<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout_bill"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:gravity="center">

    <TextView
        android:id="@+id/text_view_bill_date"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        style="@style/TextView2"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/text_view_bill_good_type"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        style="@style/TextView2"
        android:gravity="center"/>

    <TextView
        android:id="@+id/text_view_bill_departure"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        style="@style/TextView2"
        android:gravity="center"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:src="@drawable/ic_turn_right"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"/>

    <TextView
        android:id="@+id/text_view_bill_destination"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        style="@style/TextView2"
        android:gravity="center"/>

    <TextView
        android:id="@+id/text_view_bill_total_price"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        style="@style/TextView2"
        android:gravity="center"/>
</LinearLayout>